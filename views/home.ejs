<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>FHSP - Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-100">
  <header class="flex bg-white mx-auto w-4/5 py-5 px-24 border-b-2 rounded">
    <div class="grow">
      <h1>FHSP</h1>
    </div>
    <div>
      <form method="post" action="/logout">
        <input class="text-sky-500" type="submit" value="Logout">
      </form>
    </div>
  </header>
  <div class="px-24 h-screen w-4/5 bg-white mx-auto rounded">
    <h1>my files</h1>
    <form method="post" action="upload" class="my-3 py-3 bg-white border rounded" encType="multipart/form-data">
      <input type="file" name="file">
      <input type="submit" value="Upload" class="bg-cyan-800 text-white px-3 py-1 rounded">
    </form>
    <div class="border min-h-12">
      <%= files %>
    </div>
  </div>
</body>
</html>
